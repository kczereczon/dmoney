<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>

<VBox BorderPane.alignment="CENTER" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <TabPane tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS">
        <tabs>
          <Tab text="Categories">
               <content>
                  <VBox prefHeight="200.0" prefWidth="100.0" styleClass="dark-background">
                     <children>
                        <HBox alignment="CENTER" prefWidth="580.0" spacing="10.0">
                           <children>
                              <TextField promptText="Name of Category" HBox.hgrow="ALWAYS" />
                              <Button alignment="CENTER_RIGHT" mnemonicParsing="false" text="Add" />
                           </children>
                           <padding>git
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </padding>
                        </HBox>
                        <TableView prefHeight="200.0" prefWidth="200.0">
                          <columns>
                            <TableColumn prefWidth="75.0" text="Name" />
                            <TableColumn prefWidth="75.0" text="Created At" />
                              <TableColumn prefWidth="75.0" text="Updated At" />
                              <TableColumn prefWidth="75.0" text="Total spend" />
                          </columns>
                           <columnResizePolicy>
                              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                           </columnResizePolicy>
                        </TableView>
                     </children>
                  </VBox>
               </content>
          </Tab>
          <Tab text="Subcategories">
               <content>
                  <VBox prefHeight="200.0" prefWidth="100.0" styleClass="dark-background">
                     <children>
                        <HBox alignment="CENTER" prefWidth="580.0" spacing="10.0">
                           <children>
                              <TextField promptText="Name of Subcateogry" HBox.hgrow="ALWAYS" />
                              <ComboBox prefWidth="150.0" promptText="Category" />
                              <Button contentDisplay="CENTER" mnemonicParsing="false" text="Add" textOverrun="CENTER_WORD_ELLIPSIS" />
                           </children>
                           <padding>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </padding>
                        </HBox>
                        <TableView prefHeight="200.0" prefWidth="200.0">
                          <columns>
                            <TableColumn editable="false" prefWidth="75.0" text="Name" />
                            <TableColumn editable="false" prefWidth="75.0" text="Category" />
                              <TableColumn editable="false" prefWidth="75.0" text="Created At" />
                              <TableColumn editable="false" prefWidth="75.0" text="Updated At" />
                              <TableColumn editable="false" prefWidth="75.0" text="Total Spend" />
                          </columns>
                           <columnResizePolicy>
                              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                           </columnResizePolicy>
                        </TableView>
                     </children>
                  </VBox>
               </content>
          </Tab>
        </tabs>
      </TabPane>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
